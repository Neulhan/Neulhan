{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    "pasteImage.defaultName": "Y-MM-DD-HH-mm-ss",
    "pasteImage.basePath": "${projectRoot}/tmp",
    "pasteImage.path": "${projectRoot}/tmp",
    "markdown.editor.filePaste.copyIntoWorkspace": "never",
    "markdown.editor.filePaste.enabled": false,
    "pasteImage.suffix": ".webp",
    "pasteImage.prefix": "https://neulhan-blog.s3.ap-northeast-2.amazonaws.com/images/",
    "pasteImage.showFilePathConfirmInputBox": true,
    "pasteImage.insertPattern": "${imageSyntaxPrefix}${imageFilePath}${imageSyntaxSuffix}"
}
